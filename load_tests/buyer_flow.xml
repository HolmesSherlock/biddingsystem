<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/Cellar/tsung/1.6.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" dumptraffic="true" version="1.0">
    <!-- Client side setup -->
    <clients>
        <client host="localhost" use_controller_vm="true" maxusers="1000" />
    </clients>
    <!-- Server side setup -->
    <servers>
        <server host="bidding-system-priyankabose.c9users.io" port="443" type="ssl"></server>
    </servers>
    <load>
        <arrivalphase phase="1" duration="1" unit="second">
            <users arrivalrate="1" unit="second"></users>
        </arrivalphase>
    </load>
    <options>
        <option name="global_ack_timeout" value="20000"></option>
        <option type="ts_http" name="user_agent">
            <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
        </option>
    </options>
    <sessions>
        <session name="buyer-search-products" probability="100" type="ts_http">
        <!--Sign Up and login-->
			<transaction name="buyer_search_products">

				<request>
				  <http url='/' version='1.1' method='GET'></http>
				</request>

                <request>
                  <dyn_variable name="authenticity_token"></dyn_variable>
                  <http url='/buyers/search' version='1.1' method='GET'></http>
                </request>

                <setdynvars sourcetype="eval" code="fun({Pid,DynVars})-&gt;{ok,Val}=ts_dynvars:lookup(authenticity_token,DynVars),re:replace(Val,&quot;[+]&quot;,&quot;%2B&quot;,[global, {return,list}]) end.">
                    <var name="authenticity_token" />
                </setdynvars>

                <request subst="true">
                  <http url='/buyers/search_products' method="POST" version="1.1"
                  contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;search%5Bcategory_id%5D=2"></http>
                </request>
            </transaction>

            <transaction name="buyer_sign_up">

                <request>
                  <dyn_variable name="authenticity_token"></dyn_variable>
                  <http url="/users/sign_up" version='1.1' method='GET'></http>
                </request>

                <thinktime value="2" random="true"></thinktime>

                <setdynvars sourcetype="eval" code="fun({Pid,DynVars})-&gt;{ok,Val}=ts_dynvars:lookup(authenticity_token,DynVars),re:replace(Val,&quot;[+]&quot;,&quot;%2B&quot;,[global, {return,list}]) end.">
                    <var name="authenticity_token" />
                </setdynvars>

                <setdynvars sourcetype="random_number" start="1" end="9999">
                  <var name="random_email_number" />
                </setdynvars>

                <request subst="true">
                  <http url="/users" method="POST" version="1.1"
                  contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;user%5Bemail%5D=user%%_random_email_number%%@gmail.com&amp;user%5Bpassword%5D=password&amp;user%5Bpassword_confirmation%5D=password&amp;commit=Sign+up"></http>
                </request>

            </transaction>

            <thinktime value="2" random="true"></thinktime>
            
            <transaction name="buyer_ongoing_auctions_place_bid">

                <request>
                  <dyn_variable name="authenticity_token"></dyn_variable>
                  <dyn_variable name="place_bid_url" xpath="//table/tbody/tr[2]/td[6]/a/@href" ></dyn_variable>
                  <http url='/buyers/ongoing_auctions' version='1.1' method='GET'></http>
                </request>

                <request subst="true">
                  <dyn_variable name="authenticity_token"></dyn_variable>
                  <http url='%%_place_bid_url%%' method="GET" version="1.1"></http>
                </request>

                <setdynvars sourcetype="eval" code="fun({Pid,DynVars})-&gt;{ok,Val}=ts_dynvars:lookup(authenticity_token,DynVars),re:replace(Val,&quot;[+]&quot;,&quot;%2B&quot;,[global, {return,list}]) end.">
                    <var name="authenticity_token" />
                </setdynvars>

                <request subst="true">
                  <http url="/buyers/place_bid" method="POST" version="1.1"
                  contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;bid%5Bproduct_id%5D=4&amp;bid%5Bbid_amount%5D=100.0"></http>
                </request>

                <thinktime value="3" random="true"></thinktime>
                
            </transaction>

            <transaction name="buyer_ongoing_auctions_revoke_bid">

                <request>
                  <dyn_variable name="authenticity_token"></dyn_variable>
                  <dyn_variable name="revoke_bid_url" xpath="//table/tbody/tr[2]/td[7]/a/@href" ></dyn_variable>
                  <http url='/buyers/ongoing_auctions' version='1.1' method='GET'></http>
                </request>

                <request subst="true">
                  <http url='%%_revoke_bid_url%%' method="GET" version="1.1"></http>
                </request>
                
            </transaction>
            
            <setdynvars sourcetype="eval" code="fun( {Pid, DynVars} ) -> io:format([126, $p, 126, $n, 126, $n], [DynVars]), ok end.">
                    <var name="value" />
            </setdynvars>

		</session>

    </sessions>
</tsung>