<p id="notice">
  <%= notice %>
</p>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-primary">
        <div class="panel-heading">Categories</div>
        <div class="panel-body">
          <table id="categories" class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td>
                    <%= category.name %>
                  </td>
                  <td>
                    <%= category.description %>
                  </td>
                  <td>
                    <%= link_to 'Show', category %>
                  </td>
                  <td>
                    <%= link_to 'Edit', edit_category_path(category) %>
                  </td>
                  <td>
                    <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
          <div id="paginate">
            <%= will_paginate @categories, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>