
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="panel-heading">Categories</div>
    <div class="panel-body">
      <% cache(cache_key_for_categories_table(@categories, @page)) do %>
      <table id="categories" class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <% cache(cache_key_for_categories(category)) do %>
            <tr>
              <td>
                <%= category.name %>
              </td>
              <td>
                <%= category.description %>
              </td>
              <td>
                <%= link_to 'Show', category, :class => "btn btn-default btn-sm" %>
              </td>
              <td>
                <%= link_to 'Edit', edit_category_path(category), :class => "btn btn-default btn-sm" %>
              </td>
              <td>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm" %>
              </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <% end %>
      <div id="paginate">
        <%= will_paginate @categories, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>