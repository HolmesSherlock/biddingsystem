<div class="col-md-5">
    <div class="panel panel-primary">
        <div class="panel-heading">Place New Bid</div>
        <div class="panel-body">
 
            <%= form_for :bid, url: { action: "place_bid" } do |f| %>
            
                <div class="field">
                    <%= f.label :product_id %>
                        <%= f.text_field :product_id, :value => @product_id, :readonly => true %>
                </div>
                
                <div class="field">
                    <%= f.label :your_bid %>
                        <%= f.text_field :bid_amount, :value => @highest_bid %>
                </div>

                <div class="actions">
                    <%= f.submit "Place bid", class: "btn btn-success" %>
                </div>
            <% end %>
        </div>    
    </div>
</div>