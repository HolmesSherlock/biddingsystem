<div class="col-md-3">
    <div class="list-group">
        <% @latest_products.each do |product| %>
            <div class="thumbnail">
                <%= link_to image_tag product.image.url(:original), :class => "product" %>
                <div class="caption">
                    <h3 class="text-center"><%= product.name %></h3>
                    <h4 class="text-center"><p class="text-info"><%= @locations[product.location_id] %></p></h4>
                </div>
            </div>
        <% end %>
    </div>
</div>